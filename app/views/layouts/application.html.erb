	</style>
	<%= javascript_include_tag "jquery" %>
	<script type="text/javascript">
	  $(document).ready(function() {
	    if($("#flash").html().length) {
	      $("#flash").show();
	    }
	    
	    $('.phone-box').focus();
	  });
	</script>
</head>

<body>
  <div id="container">
    
    <div id="masthead">
      <%= image_tag('masthead.png') %>
    </div>
    
    
    <div class="contents">
      <div id="flash"><%= flash[:notice] %></div>
      <%= yield :layout %>  
      <div class="clear"></div>
    </div>
    
    <div class="clear"></div>
  </div>
</body>
</html>



